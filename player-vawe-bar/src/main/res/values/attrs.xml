<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PlayerWaveBar">
        <attr name="waveColor" format="color" />
        <attr name="waveWidth" format="dimension" />
        <attr name="step" format="integer" />
        <attr name="amplitude" format="dimension" />
        <attr name="frequency" format="integer" />
        <attr name="offset" format="integer" />

        <!-- The set value will determine the percentage
             of the track played. It is used to visualize
             the sine wave. When calling the method that
             sets the track duration, the value will
             automatically reset to 0.  -->
        <attr name="startFrom" format="integer" />
        <attr name="indicatorRadius" format="dimension" />
    </declare-styleable>
</resources>